class DictWordChecker {
	
	
	
    public static boolean check_for_word(String word) {
    	
        try {
        	
        	GZIPInputStream gzip = new GZIPInputStream(new FileInputStream(new File("C:\\Users\\pirapu\\eclipse-workspace\\Crawler\\data\\big.txt.gz")));
        	BufferedReader br = new BufferedReader(new InputStreamReader(gzip));
            
            String str;
            
            while ((str = br.readLine()) != null) {
                if (str.contains(word)) {
                    return true;
                }
            }
            br.close();
        } catch (IOException e) {
        }

        return false;
    }

    public static void main(String[] args) {
        System.out.println(check_for_word("ppple"));
        
		}
    }
