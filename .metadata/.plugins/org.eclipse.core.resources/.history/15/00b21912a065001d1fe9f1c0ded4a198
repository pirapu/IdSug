package com.iitm.raj.hello;

import java.io.FileReader;
import java.io.IOException;
import java.io.StringReader;
import java.util.Set;

import edu.stanford.nlp.ling.CoreLabel;
import edu.stanford.nlp.ling.Word;
import edu.stanford.nlp.process.CoreLabelTokenFactory;
import edu.stanford.nlp.process.PTBTokenizer;




public class TokenizerDemo {

  @SuppressWarnings("static-access")
public static void main(String[] args) throws IOException {
	  
	  ASTReader ast = new ASTReader();
	  Set<String> names1 = null;
		 //System.out.println("hellllllllllllll00"+path);
		try {
			
			 names1 =	ast. parse(ast.readFileToString("E:\\runtime-EclipseApplication\\raaaj\\src\\raj\\BubbleSortExample.java"));
			
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	  
    for (String arg : names1) {
      
      // option #2: By token
    	PTBTokenizer<Word> ptb = PTBTokenizer.newPTBTokenizer(new StringReader(arg));
      //PTBTokenizer<CoreLabel> ptbt = new PTBTokenizer<>(new FileReader(arg),new CoreLabelTokenFactory(), "");
      while (ptb.hasNext()) {
        Word label = ptb.next();
        System.out.println(label);
      }
    }
  }
}